# Sample prepare inventory
# Copy to inventory/prepare.ini and adjust ansible_user / password vars if needed

[all:vars]
# Set the temporary login user before bootstrap (e.g. vendor-provided admin like 'ubuntu' or 'root')
# This user MUST have sudo privileges on the target machine.
ansible_user=ubuntu
# Force password auth and ignore host keys for fresh install
ansible_ssh_common_args='-o PreferredAuthentications=password -o PubkeyAuthentication=no -o StrictHostKeyChecking=no'
ansible_ssh_private_key_file=
# Uncomment if you need to override password for initial login
# ansible_password=changeme

[controller]
ctrl-node ansible_host=192.168.1.10

[compute]
gpu-node-01 ansible_host=192.168.1.20

[infra]
infra-node ansible_host=192.168.1.30
